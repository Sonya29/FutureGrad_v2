<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="~/Content/favicon.gif" type="image/gif" sizes="16x16">
    <title>SonyaSoftware</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/stylesheet.css">
    <script src="~/Scripts/Layout.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="http://sonya.sonyasofya.co.uk/">SonyaSoftware</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="homeMenuItems" id="homeMenuItem1"><a>WELCOME</a></li>
                    <li class="homeMenuItems" id="homeMenuItem2"><a>MARKER-BIAS</a></li>
                    <li class="homeMenuItems" id="homeMenuItem3"><a >FEEDBACK</a></li>
                    <li class="homeMenuItems" id="homeMenuItem4"><a>ON-SCREEN MARKING</a></li>
                    <li><a id="logLink" href=""><span id="logIcon"></span> <span id="logText"></span></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="width:100% !important;padding-left:0px;padding-right:0px">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SonyaSoftware</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
    hideDisabledLinks();
    </script>
</body>
</html>
